<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffffff">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play with AI"
        android:id="@+id/button_ai"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:shadowColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Online"
        android:id="@+id/button_join"
        android:layout_below="@+id/button_ai"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:shadowColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NDN Hangman"
        android:id="@+id/game_title"
        android:layout_above="@+id/button_ai"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:singleLine="true"
        android:textSize="40dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:layout_alignBottom="@+id/button_join"
        android:layout_toLeftOf="@+id/button_ai"
        android:layout_toStartOf="@+id/button_ai"
        android:src="@drawable/hangman_6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Dennis Chan"
        android:id="@+id/text_dennis"
        android:layout_above="@+id/text_chih"
        android:layout_centerHorizontal="true"
        android:textColor="#848484" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Chih Chang"
        android:id="@+id/text_chih"
        android:layout_above="@+id/text_jinda"
        android:layout_centerHorizontal="true"
        android:textColor="#848484" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Jinda Zhuang"
        android:id="@+id/text_jinda"
        android:layout_above="@+id/text_cs217b"
        android:layout_centerHorizontal="true"
        android:textColor="#848484" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="CS217B (Spring 2015)"
        android:id="@+id/text_cs217b"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"
        android:textColor="#848484" />

</RelativeLayout>
